@Composable
fun Boxx(){
    Box(modifier = Modifier
        .fillMaxSize(),
        contentAlignment = Alignment.Center){
        Box(modifier = Modifier
//            .width(100.dp)
//            .height(100.dp)
            .background(Color.Red)
        ){
            Box(modifier = Modifier
                .width(50.dp)
                .height(50.dp)
                .background(Color.Green)
                .horizontalScroll(rememberScrollState()))

            Text(text = "Hello", fontSize = 40.sp)
        }
    }
}

